<% provide(:title, "Регистрация") %>
<div class="container-fluid featurette-divider align-items-center">
  <div class="col-lg-4 col-md-6 col-sm-10 border p-5 mx-auto">

    <h2 class="center">Регистрация</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name),  data: { turbo: false }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="form-group my-3">
        <%= f.text_field :name, autofocus: true, autocomplete: "name", class: "form-control", placeholder: "Имя" %>
      </div>

      <div class="form-group my-3">
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "Электронный адрес" %>
      </div>

      <div class="form-group my-3">
        <% if false %>
          <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> знаков минимум)</em>
          <% end %>
        <% end %>
        <%= f.password_field :password, autocomplete: "new-password", class: "form-control", placeholder: "Пароль" %>
      </div>

      <div class="form-group my-3">
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control", placeholder: "Потверждение пароля" %>
      </div>

      <div class="actions center">
        <%= f.submit "Регистрация", class:"btn btn-primary" %>
      </div>

      <hr>
      <h6 class="center">У вас уже есть аккаунт? <%= render "devise/shared/links" %></h6>
    <% end %>

  </div>

</div>
