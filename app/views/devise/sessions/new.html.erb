<% provide(:title, "Авторизация") %>
<div class="container-fluid featurette-divider align-items-center">

  <div class="col-xl-3 col-lg-4 col-md-6 col-sm-10 border p-5 m-auto">

    <h2 class="center">Авторизация</h2>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name), data: { turbo: false }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
      <div class="form-group my-3">
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "Электронный адрес" %>
      </div>

      <div class="form-group my-3">
        <%= f.password_field :password, autocomplete: "current-password", class: "form-control", placeholder: "Пароль" %>
      </div>

      <div class="actions center">
        <%= f.submit "Войти", class:"btn btn-primary" %>
      </div>

      <hr>
      <h6 class="center">Еще не зарегистрированы?<%= link_to 'Зарегистрироваться', new_user_registration_path, class: "mx-2" %></h6>
    <% end %>
  </div>
</div>
