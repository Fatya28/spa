<%= form_with model: [ @order, @order.build_review ] do |form| %>

  <p>
    <%= form.label "Комментарий" %><br>
    <%= form.text_area :comment, class: "form-control" %>
  </p>
  <p>
    <%= form.label "Рейтинг" %><br>
    <%= form.number_field :rating, class: "form-control", min: 1, max: 5 %>
  </p>
  <p>
    <%= form.submit 'Добавить', class: "btn btn-outline-dark btn-sm" %>
  </p>

<% end %>
